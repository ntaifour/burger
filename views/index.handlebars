<div class="container" style="background-color:pink">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
        <h1>Eat Da Burger!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col text-center enter_section" style="background-color:rgba(124, 235, 235, 0.856)">
            <div class="row">
                <form action="/burgers/create" method="POST">
                    <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                    <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                </form>
                <p>Enter in a burger you would like to eat!</p>
            </div>
        </div>

        <div class="col text-center" class="task" style="background-color:rgb(128, 235, 128)">
        <div class="row">
            {{#each burger_data}}
                {{#unless this.devoured}}
            <div class="col-md-9 text-center">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>
            <div class="col-md-3 text-center">
                <form method="POST" action="/burgers/update?_method=PUT"
                    class="button-size">
                    <input type="hidden" name="id" type="text"
                    value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">
                    DEVOUR IT!</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        </div>

        <div class="col text-center" class="task" style="background-color:rgb(255, 193, 79)">
            {{#each burger_data}}
                {{#if this.devoured}}
                <input class="form-control" type="text" placeholder=
                "{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>

    </div>
</div>